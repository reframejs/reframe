{
    "private": true,
    "scripts": {
        "install-all": "npm install yarn --no-save && yarn",
        "i": "yarn",

        "docs": "mdocs ./docs/",
        "docs-all": "npm run docs && lerna run docs",

        "publish": "lerna publish --force-publish=* --npm-tag=next --cd-version=prerelease --preid=next",
        "publish-retry-npm": "lerna publish --force-publish=* --npm-tag=next --skip-git",
        "release-dry-run": "lerna publish --force-publish=* --npm-tag=next --skip-git --skip-npm",
        "release-prepare": "lerna publish --force-publish=* --npm-tag=next",
        "release": "node ./helpers/dev-utils/npm/setNpmTag.js latest",
        "check-release": "node ./helpers/dev-utils/npm/checkIfCorrectlyPublished.js",

        "deps": "check-deps",

        "clean": "git clean -xdff"
    },
